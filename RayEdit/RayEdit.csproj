<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Raylib-cs" Version="7.0.1" />
    </ItemGroup>

    <ItemGroup>
      <None Update="Assets\Fonts\FiraCode-Regular.ttf">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Assets\Themes\Default.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="App\" />
      <Folder Include="Core\Commands\" />
      <Folder Include="Core\IO\" />
      <Folder Include="Core\Text\" />
      <Folder Include="UI\Controls\" />
      <Folder Include="UI\Rendering\" />
      <Folder Include="UI\Views\" />
    </ItemGroup>

</Project>
